  <template id="s_fluxdock_mosaic_references" name="Fluxdock references mosaic">
    <section class="content bg-flux_dark">
      <div class="container-xxlg">
        <div class="content-wrap">
          <div class="content-icon">
            <img src="/fluxdock_theme/static/img/content-icons/references-icon.png"></img>
          </div>
          <h2>References</h2>
          <p>Fluxdock features a network of professional and innovative companies in different industries. Their references demonstrate this best.</p>
        </div>
        <t t-call="fluxdock_theme.mosaic">
          <t t-set="data_model" t-value="'project.reference'"/>
          <t t-set="data_limit" t-value="'4'"/>
          <t t-set="data_loadfrom" t-value="'/references/json'"/>
        </t>
        <p class="text-center mt16">
          <a href="/references">More...</a>
        </p>
      </div>
    </section>
  </template>

  <template id="place_into_bar" name="Fluxdock Snippets" inherit_id="website.snippets">
    <xpath expr="//div[@id='snippet_structure']//t[@t-snippet][last()]" position="after">
      <t t-snippet="fluxdock_theme.s_fluxdock_logo" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/logo.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_content" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/content.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_content_with_image" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/content-image.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_content_accordion" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/accordion.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_signup" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/signup_login.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_newsletter" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/newsletter.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_carousel" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/carousel.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_3d_simulation" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/simulation.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_members" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/members.png"/>
      <t t-snippet="fluxdock_theme.s_fluxdock_mosaic_references" t-thumbnail="/fluxdock_theme/static/img/snippet-thumbs/references-aggregation.png"/>
