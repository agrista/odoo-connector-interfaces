<?xml version="1.0" encoding="utf-8" ?>
<odoo>

		<template id="assets_frontend" name="Fluxdock frontend assets" inherit_id="website.assets_frontend">

			<!-- CSS -->
			<xpath expr="//link[last()]" position="after">
				<link href="/fluxdock_theme/static/lib/bootstrap-imgupload/css/bootstrap-imgupload.css" rel="stylesheet" type="text/css" />
				<link href="/fluxdock_theme/static/less/webfonts.css" rel="stylesheet" type="text/css" />
				<link href="/fluxdock_theme/static/less/bxslider/bxslider.css" rel="stylesheet" type="text/css" />
				<link href="/fluxdock_theme/static/less/mixins.less" rel="stylesheet" type="text/less" />
				<link href="/fluxdock_theme/static/less/buttons.less" rel="stylesheet" type="text/less" />
				<link href="/fluxdock_theme/static/less/style.less" rel="stylesheet" type="text/less" />
				<link href="/fluxdock_theme/static/less/utils.less" rel="stylesheet" type="text/less" />
				<link href="/fluxdock_theme/static/less/form.less" rel="stylesheet" type="text/less" />
				<link href="/fluxdock_theme/static/less/select2.less" rel="stylesheet" type="text/less" />
				<link href="/fluxdock_theme/static/less/components.less" rel="stylesheet" type="text/less" />
				<link href="/fluxdock_theme/static/less/listing.less" rel="stylesheet" type="text/less" />
				<link href="/fluxdock_theme/static/less/footer.less" rel="stylesheet" type="text/less" />
				<!-- variables must stay at the end https://github.com/odoo/odoo/issues/14657 -->
				<link href="/fluxdock_theme/static/less/variables.less" rel="stylesheet" type="text/less" />
			</xpath>


 			<!-- JS & Favicon -->
			<xpath expr="//script[last()]" position="after">
				<link rel="shortcut icon" href="/fluxdock_theme/static/favicon/favicon_v02.png" type="image/x-icon" />
				<link rel="icon" href="/fluxdock_theme/static/favicon/favicon_v01.png" type="image/x-icon" />
				<script type="text/javascript" src="/fluxdock_theme/static/js/bxslider.js"></script>
				<script type="text/javascript" src="/fluxdock_theme/static/lib/bootstrap-imgupload/js/bootstrap-imgupload.js"></script>
				<script type="text/javascript" src="/fluxdock_theme/static/js/image_upload.js"></script>

				<!--  still needed ? -->
				<script type="text/javascript" src="/fluxdock_theme/static/js/plugins/imagesloaded.pkgd.js"></script>
				<script type="text/javascript" src="/fluxdock_theme/static/js/mosaic.js"></script>
				<script type="text/javascript" src="/fluxdock_theme/static/js/tooltips.js"></script>
				<script type="text/javascript" src="/fluxdock_theme/static/src/js/publish.js"></script>
				<script type="text/javascript" src="/fluxdock_theme/static/js/fluxdock.js"></script>
			</xpath>
		</template>

</odoo>
