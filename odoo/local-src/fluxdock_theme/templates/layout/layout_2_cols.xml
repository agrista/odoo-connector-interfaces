<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <template id="layout_2_cols" name="Fluxdock layout: 2 cols">
    <t t-call="website.layout">
      <div id="wrap" class="layout_2_cols">
        <div id="main_row" class="flex-grid container-lg">
          <div id="sidebar" class="col col-left opt_dark_bg">
            <div class="above_content_wrapper opt_white_bg">
              <div class="section_info">
                <t t-if="section_logo">
                  <img class="img img-responsive section_logo center-block" t-att-src="section_logo" t-att-alt="section_title" />
                </t>
                <t t-if="section_title">
                  <h1 class="section_title"><t t-esc="section_title" /></h1>
                </t>
              </div>
            </div>
            <div class="content_wrapper">
              <t t-raw="col_left_content" />
            </div>
          </div>
          <div id="content" class="col col-content">
            <div class="content_wrapper">
              <t t-raw="main_content" />
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>

  <template id="test_2cols_layout" name="Fluxdock layout: 2 cols TEST">
    <t t-call="fluxdock_theme.layout_2_cols">
      <t t-set="main_content">
        <div class="listing">
          <t t-foreach="range(10)" t-as="just_a_counter">
            <t t-call="fluxdock_theme.test_2cols_layout_content" />
          </t>
        </div>
      </t>
    </t>
  </template>

  <template id="test_2cols_layout_content" name="Fluxdock layout: 2 cols TEST content">
      <div class="row list-item">
        <div class="item-content col-md-12">
          <div class="item-details">
            <div class="text-muted">
              <span>13 September 2017</span>
            </div>
            <a class="item-heading" href="/market/proposals/gerald-die-museumsmaschine-14">
              <strong>GERALD - Die Museumsmaschine</strong>
            </a>
            <div class="item-description">
              <span>Für Museomix wird im Fluxdock die Idee der Museumsmaschine GERALD weiterentwickelt. Ein firmenübergreifendes Team von 3-5 Personen entwickelt in einem agilen Prozess einen Protyp von GERALD.</span>
              <a class="read-more" href="/market/proposals/gerald-die-museumsmaschine-14">Read More
                <i class="fa fa-long-arrow-right"></i>
              </a>
            </div>
            <div class="item-tags">
              <strong>Industry:</strong>
              <span class="tag-value">
                Communication, Design, Engineering, ICT</span>
            </div>
            <div class="item-tags">
              <strong>Expertise:</strong>
              <span class="tag-value">
                Graphic Design,  Electrical Engineering,  Mechanical Engineering,
                System Engineering,  Database Administration,  Agile Development,
                Content Management,  Data Handling / Processing,  Interaction Design,
                Content Development
              </span>
            </div>
          </div>
        </div>
      </div>
  </template>

</odoo>
