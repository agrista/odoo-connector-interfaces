<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <template id="layout_2_cols" name="Fluxdock layout: 2 cols">
    <t t-call="website.layout">
      <div id="wrap" class="layout_2_cols">
        <div class="container-lg">
          <div id="main_row" class="flex flex-grid">
            <div id="sidebar" class="col col-left col-w25 col-pd-3 bg-flux_blue">
              <div class="above_content_wrapper">
                <div class="section_info">
                  <t t-if="section_logo">
                    <img class="img img-responsive section_logo center-block" t-att-src="section_logo" t-att-alt="section_title" />
                  </t>
                  <t t-if="section_title">
                    <h1 class="section_title"><t t-esc="section_title" /></h1>
                  </t>
                </div>
              </div>
              <div class="content_wrapper">
                <t t-if="col_left_content">
                  <t t-raw="col_left_content" />
                </t>
                <t t-else="context_menu">
                  <t t-call="fluxdock_theme.sidebar_context_menu" />
                </t>
              </div>
            </div>
            <div id="content" class="col col-content col-w75 col-pd-3">
              <div class="content_wrapper">
                <t t-raw="main_content" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>

  <template id="sidebar_context_menu" name="Fluxdock layout: sidebar context menu">
    <ul class="nav nav-pills nav-stacked context-menu">
      <t t-foreach="context_menu" t-as="menu_item">
        <li t-att-id="menu_item['id']" t-att-class="'active' if menu_item['active'] else None">
          <a t-att-href="menu_item['url']" t-att-title="menu_item['name']">
            <span t-esc="menu_item['name']" />
          </a>
        </li>
      </t>
    </ul>
  </template>

</odoo>
