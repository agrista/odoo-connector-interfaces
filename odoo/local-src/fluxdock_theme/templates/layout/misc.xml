<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="add_body_classes" inherit_id="web.layout">
    <body position="attributes">
      <attribute name="t-att-class">body_classname or '' + (' ' + website.get_extra_body_klass(request) if website else '')</attribute>
    </body>
  </template>

  <template id="language_selector" inherit_id="website.language_selector">
    <xpath expr="//a[hasclass('js_change_lang')]/t" position="replace">
      <!-- display only EN or DE from lang code -->
      <t t-esc="lg[0][:2].upper()"/>
    </xpath>
  </template>

</odoo>
