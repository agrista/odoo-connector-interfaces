<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="field_widget_m2o" name="Fluxdock styled m2o field widget" inherit_id="cms_form.field_widget_m2o">
      <select position="replace">
        <div class="styled-select form-control">
          <select t-attf-class="#{widget.w_css_klass}"
                  t-att-name="widget.w_fname"
                  t-att-required="widget.w_field['required'] and '1' or None"
                  t-att-data-params="widget.w_data">
            <option value=""><t t-esc="widget.w_field['string'] + '...'" /></option>
            <t t-foreach="widget.w_option_items" t-as="opt_item">
             <option class="value"
                     t-att-value="opt_item.id"
                     t-att-selected="opt_item.id == widget.w_field_value">
                <t t-esc="opt_item.name"/>
             </option>
            </t>
          </select>
        </div>
      </select>
    </template>

    <template id="country_field_widget_m2o"
              name="Fluxdock country m2o field widget"
              inherit_id="fluxdock_theme.field_widget_m2o"
              primary="True">
      <xpath expr="//option[hasclass('value')]" position="attributes">
        <attribute name="t-att-data-country">widget.country_info(opt_item)</attribute>
      </xpath>
    </template>


    <template id="field_widget_image" name="Fluxdock image upload widget" inherit_id="cms_form.field_widget_image">
      <xpath expr="//div[hasclass('image-widget-wrapper')]" position="replace">
        <div class="image-widget-wrapper">
          <div class="image-upload-widget" t-att-style="widget.w_data.get('forced_style')">
            <t t-set="image_input_name" t-value="image_input_name or 'image'" />
            <t t-if="widget.w_field_value">
              <img class="img img-responsive" t-att-src="widget.w_field_value.get('value')" />
            </t>
            <div class="imgupload"
                 t-att-data-preview-width="widget.w_data.get('image_preview_width', 200)"
                 t-att-data-preview-height="widget.w_data.get('image_preview_height', 200)">
                <div class="file-tab">
                    <label t-att-for="widget.w_fname" class="btn btn-file">
                        <span class="info overlay overlay-slideup">
                            <span class="browse">Browse</span>
                            <info class="format">Format: *.png/*.jpg</info>
                        </span>
                        <input
                            type="file" capture="camera" accept="image/*"
                            t-att-id="fname"
                            t-att-name="widget.w_fname"
                            class="form-control"
                            />
                    </label>
                </div>
            </div>
          </div>
          <t t-if="widget.w_field_value">
            <t t-set="prefix" t-value="widget.w_fname"/>
            <div t-attf-id="#{prefix}_keepbox" class="keepbox text-center">
              <div class="form-group">
                <label class="checkbox inline" t-attf-for="#{prefix}_keepcheck_yes">
                  <input type="radio" t-attf-id="#{prefix}_keepcheck_yes" t-attf-name="#{prefix}_keepcheck" checked="1" value="yes"/>
                  keep submitted
                </label>
                <label class="checkbox inline" t-attf-for="#{prefix}_keepcheck_no">
                  <input type="radio" t-attf-id="#{prefix}_keepcheck_no" t-attf-name="#{prefix}_keepcheck" value="no"/>
                  replace submitted
                </label>
              </div>
            </div>
          </t>
        </div>
      </xpath>
    </template>

    <!--  old implementation for no-cms form -->
    <template id="imageupload_widget" name="Fluxdock image upload widget">
        <div class="image-upload-widget">
            <t t-set="image_input_name" t-value="image_input_name or 'image'" />
            <t t-if="image_preview_url">
                <img itemtype="image" class="img img-responsive" t-att-src="image_preview_url" />
            </t>
            <div class="imgupload" t-att-data-preview-width="image_preview_width">
                <div class="file-tab">
                    <label t-att-for="image_input_name" class="btn btn-file">
                        <span class="info overlay overlay-slideup">
                            <span class="browse">Browse</span>
                            <info class="format">Format: *.png/*.jpg</info>
                        </span>
                        <input
                            type="file" capture="camera" accept="image/*"
                            t-att-id="image_input_name"
                            t-att-name="image_input_name"
                            class="form-control"
                            />
                    </label>
                </div>
            </div>
        </div>
    </template>

    <template id="carousel" name="Fluxdoc carousel">
        <section class="carousel">
            <ul class="bxslider" t-att-data-slider="carousel_data">
                <t t-foreach="carousel_items" t-as="carousel_item">
                    <li class="carousel-item" t-att-style="'background-image: url({});'.format(website.image_url(carousel_item, 'image'))" />
                </t>
            </ul>
        </section>
    </template>

</odoo>
