<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="portal_project_project" name="Portal Project Project" inherit_id="website_portal.account">
        <xpath expr="//div[contains(@class,'o_my_documents')]/*[last()]" position="after">
            <h3 class="page-header">Your Reference Projects</h3>
            <t t-if="not projects">
                <p>There are currently no reference projects for your account.</p>
            </t>
            <t t-if="projects">
                <table class="table table-hover status_table">
                    <thead>
                        <tr class="active">
                            <th>Name</th>
                            <th>Zeitpunkt</th><th/>
                            <th>Ort</th>
                        </tr>
                    </thead>
                    <t t-foreach="projects" t-as="project">
                        <tr t-att-class="'hidden to_hide' if project_index &gt; 4 else ''">
                            <td><a t-attf-href="/my/projects/#{project.id}">Projects <t t-esc="project.id"/></a></td>
                            <td><span t-field="project.referenz_titel"/></td><td/>
                            <td><span t-field="project.zeitpunkt_implementierung"/></td><td/>
                            <td><span t-field="project.ort"/></td><td/>
                        </tr>
                    </t>
                    <tr t-att-class="'hidden' if len(projects) &lt; 6 else ''">
                        <td colspan="4">
                            <a href="" class="o_my_show_more btn btn-xs btn-default"><span>Show more</span><span class="hidden">Show less</span></a>
                        </td>
                    </tr>
                </table>
            </t>
        </xpath>
    </template>
    <template id="projects_followup" name="Projects">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="oe_structure">
                        <div class="row">
                            <div class="col-sm-4">
                                <ol class="breadcrumb mt8">
                                    <li><a href="/my/home">My Account</a></li>
                                    <li>Project <span t-field="project.id"/></li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4>
                                            Project <span t-field="project.id"/> - <span t-field="project.name"/>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div class="mb8">
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="referenz_titel">Referenz Titel</label>
						<input type="text" name="referenz_titel" class="form-control" t-att-value="project.referenz_titel"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="zeitpunkt_implementierung">Zeitpunkt Implementierung</label>
						<input type="text" name="zeitpunkt_implementierung" class="form-control" t-att-value="project.zeitpunkt_implementierung"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="ort">Ort</label>
						<input type="text" name="ort" class="form-control" t-att-value="project.ort"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="kategorie">Kategorie</label>
						<input type="text" name="kategorie" class="form-control" t-att-value="project.kategorie"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="expertise">Expertise</label>
						<input type="text" name="expertise" class="form-control" t-att-value="project.expertise"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="referenz_bild">Referenz Bild</label>
						<input type="text" name="referenz_bild" class="form-control" t-att-value="project.referenz_bild"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="referenz_kurzbeschreibung">Referenz Kurzbeschreibung</label>
						<input type="text" name="referenz_kurzbeschreibung" class="form-control" t-att-value="project.referenz_kurzbeschreibung"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="referenz_partner">Referenz Partner</label>
						<input type="text" name="referenz_partner" class="form-control" t-att-value="project.referenz_partner"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="video_url">Video URL</label>
						<input type="text" name="video_url" class="form-control" t-att-value="project.video_url"/>
					</div>
					<div class="col-md-7 col-sm-8">
						<label class="control-label label-optional" for="agree_to_terms">Agree to terms</label>
						<input type="text" name="agree_to_terms" class="form-control" t-att-value="project.agree_to_terms"/>
					</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
