<?xml version="1.0"?>
<odoo>

    <!-- Email templates for membership.
    We register it here since it belongs to this module,
    but we populate the html via anthem song to keep better control
    and to be able to use html file for it.
    See `songs/install/post`
    -->
    <record id="mail_membership_upgrade" model="mail.template">
        <field name="name">Fluxdock membership upgrade</field>
    </record>

    <record id="set_password_email" model="mail.template">
        <field name="name">Fluxdock Signup</field>
    </record>

    <record id="reset_password_email" model="mail.template">
        <field name="name">Fluxdock Password Reset</field>
    </record>

</odoo>
