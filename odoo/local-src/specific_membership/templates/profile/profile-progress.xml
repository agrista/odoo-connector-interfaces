<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- split this text to keep its customization independent from progress bar -->
    <template id="profile_step_2_msg" name="Fluxdock profile step 2 message">
        Your profile has not been published yet. Please complete your member profile to get visible as a Fluxdock member.
    </template>

    <!-- split this text to keep its customization independent from progress bar -->
    <template id="profile_step_3_msg" name="Fluxdock profile step 3 message">
        Show your proficiency by supplementing your profile with your reference projects.
    </template>

    <!-- split this text to keep its customization independent from progress bar -->
    <template id="profile_completed_msg" name="Fluxdock profile completed message">
        <p>You succesfully completed your profile</p>
        <p>Continue exploring fluxdock</p>
    </template>


    <template id="profile_progress_bar" name="Fluxdock profile progress bar">
        <t t-if="show_profile_progress">
            <div class="container">
                <div t-attf-class="profile-progress-bar #{partner.profile_state}">
                    <div t-attf-class="step step-1 #{partner.profile_state in ('step-1','step-2','step-3') and 'done' or ''}">
                        <div class="spacer"></div>
                        <span class="text">Sign-up</span>
                    </div>
                    <div t-attf-class="step step-2 #{partner.profile_state in ('step-2','step-3') and 'done' or ''}">
                        <div class="spacer"></div>
                        <t t-set="show_tooltips" t-value="partner.profile_state == 'step-1'" />
                        <t t-if="show_tooltips">
                            <span class="tooltips sticky">
                                <span class="text">Member profile published</span>
                                <span class="msg"><t t-call="specific_membership.profile_step_2_msg" /></span>
                            </span>
                        </t>
                        <t t-if="not show_tooltips">
                            <span class="text">Member profile published</span>
                        </t>
                    </div>
                    <div t-attf-class="step step-3 #{partner.profile_state == 'step-3' and 'done' or ''}">
                        <div class="spacer"></div>
                        <t t-set="show_tooltips" t-value="partner.profile_state == 'step-2'" />
                        <t t-if="show_tooltips">
                            <span class="tooltips sticky">
                                <span class="text">Upload references</span>
                                <span class="msg"><t t-call="specific_membership.profile_step_3_msg" /></span>
                            </span>
                        </t>
                        <t t-if="not show_tooltips">
                            <span class="text">Upload references</span>
                        </t>
                    </div>
                </div>
                <t t-if="partner.profile_completed">
                    <div class="center-block main-content-wrapper profile-complete-msg">
                        <t t-call="specific_membership.profile_completed_msg" />
                    </div>
                </t>
            </div>
        </t>
    </template>

</odoo>
