<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="members_search_form_header" name="Fluxdock members search form header">
      <div class="content-icon">
          <img src="/specific_membership/static/src/img/members-white.png"></img>
      </div>
      <h2>Members</h2>
    </template>


    <template id="search_form_fields" name="Fluxdock partner search form fields">

      <div class="row filter-row row-1">
        <div class="col-md-9 col-xs-12">
          <t t-raw="form_fields['name']['widget'].render()"/>
        </div>
        <div class="col-md-3 col-xs-12">
          <button type="submit" class="btn btn-default btn-primary ">Search</button>
        </div>
      </div>
      <div class="row filter-row row-2">
        <div class="col-md-4 col-xs-12">
          <t t-raw="form_fields['category_id']['widget'].render()"/>
        </div>
        <div class="col-md-4 col-xs-12">
          <t t-raw="form_fields['expertise_ids']['widget'].render()"/>
        </div>
        <div class="col-md-4 col-xs-12">
          <t t-raw="form_fields['country_id']['widget'].render()"/>
        </div>
      </div>

    </template>

</odoo>
