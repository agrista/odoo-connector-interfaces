<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- INHERITED SEARCH -->
  <record id="view_project_profession_project_search" model="ir.ui.view">
      <field name="name">project_profession.project.search</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.view_project_project_filter"/>
      <field name="arch" type="xml">
          <field name="name" position="after">
              <field name="profession_ids"/>
          </field>
      </field>
  </record>

  <!-- INHERITED FORM -->
  <record id="view_project_profession_project_form" model="ir.ui.view">
      <field name="name">project_profession.project.form</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.edit_project"/>
      <field name="arch" type="xml">
          <field name="partner_id" position="after">
              <field name="profession_ids" widget="many2many_tags"/>
          </field>
      </field>
  </record>

  <!-- INHERITED KANBAN -->
  <record model="ir.ui.view" id="view_project_kanban">
      <field name="name">project.project.kanban</field>
      <field name="model">project.project</field>
      <field name="inherit_id" ref="project.view_project_kanban"/>
      <field name="arch" type="xml">
          <field name="task_count" position="after">
              <field name="profession_ids"/>
          </field>
          <div class="o_kanban_primary_left" position="after">
              <div class="oe_kanban_footer_left" style="margin-top:5px;">
                  <field name="profession_ids"/>
              </div>
          </div>
      </field>
  </record>

</odoo>
