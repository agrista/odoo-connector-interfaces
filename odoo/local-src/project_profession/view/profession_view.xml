<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- SEARCH VIEW -->
  <record id="view_project_profession_search" model="ir.ui.view">
    <field name="name">project_profession.search</field>
    <field name="model">project.partner.profession</field>
    <field name="arch" type="xml">
      <search string="Profession">
        <field name="name" string="Name"/>
      </search>
    </field>
  </record>

  <!-- FORMVIEW -->
  <record id="view_project_profession_form" model="ir.ui.view">
    <field name="name">project_profession.profession.form</field>
    <field name="model">project.partner.profession</field>
    <field name="arch" type="xml">
      <form string="profession">
        <header></header>
        <sheet string="Profession">
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- TREEVIEW -->
  <record id="view_project_profession_tree" model="ir.ui.view">
    <field name="name">project_profession.profession.tree</field>
    <field name="model">project.partner.profession</field>
    <field name="arch" type="xml">
      <tree string="Profession" editable="top">
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="action_project_profession" model="ir.actions.act_window">
    <field name="name">Partner Project Profession</field>
    <field name="res_model">project.partner.profession</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_project_profession_tree"/>
    <field name="search_view_id" ref="view_project_profession_search"/>
    <field name="domain">[]</field>
  </record>

  <menuitem
    name="Partner Project Profession"
    id="menu_project_profession"
    sequence="15"
    action="action_project_profession"
    parent="project.menu_project_config"
    />

</odoo>
