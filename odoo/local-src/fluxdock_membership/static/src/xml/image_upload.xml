<templates id="template" xml:space="preserve">

    <t t-name="website.image.upload">
        <div class="modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        <h3 class="modal-title">Upload Image</h3>
                    </div>
                    <div class="oe_slides_upload_loading text-center" style="display:none">
                        <h4><i class='fa fa-spinner fa-spin'></i> Uploading image...  </h4>
                    </div>
                    <div class="modal-body">
                        <form class="clearfix form-horizontal">
                            <div class="form-group">
                                <div class="col-sm-4">
                                    <div class="img-thumbnail">
                                        <div class="o_slide_preview">
                                            <img src="/website_slides/static/src/img/document.png" id="slide-image" title="Content Preview" class="img-responsive"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <ul class="list-group">
                                        <li class="list-group-item active">
                                            <h5 class="list-group-item-heading">
                                                <label for="upload" class="control-label">Image File</label>
                                            </h5>
                                            <input id="upload" name="file" class="form-control" accept="image/*,application/pdf" type="file"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-loading-text="Loading..." class="btn btn-primary save">Save</button>
                        or
                        <a href="#" data-dismiss="modal" aria-hidden="true">Discard</a>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
