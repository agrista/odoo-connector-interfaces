<openerp>
	<data>
		<template id="mystyle" name="Fluxdock frontend assets" inherit_id="website.assets_frontend">

			<!-- CSS -->
			<xpath expr="link[@href='/website/static/src/css/website.css']" position="replace">
				<link href="/theme_fluxdocs/static/lib/bootstrap-imgupload/css/bootstrap-imgupload.css" rel="stylesheet" type="text/css" />
				<link href="/theme_fluxdocs/static/less/webfonts.css" rel="stylesheet" type="text/css" />
				<link href="/theme_fluxdocs/static/less/bxslider/bxslider.css" rel="stylesheet" type="text/css" />
				<link href="/theme_fluxdocs/static/less/buttons.less" rel="stylesheet" type="text/less" />
				<link href="/theme_fluxdocs/static/less/style.less" rel="stylesheet" type="text/less" />
				<link href="/theme_fluxdocs/static/less/utils.less" rel="stylesheet" type="text/less" />
				<link href="/theme_fluxdocs/static/less/form.less" rel="stylesheet" type="text/less" />
				<link href="/theme_fluxdocs/static/less/components.less" rel="stylesheet" type="text/less" />
				<link href="/theme_fluxdocs/static/less/listing.less" rel="stylesheet" type="text/less" />
				<!-- variables must stay at the end https://github.com/odoo/odoo/issues/14657 -->
				<link href="/theme_fluxdocs/static/less/variables.less" rel="stylesheet" type="text/less" />
			</xpath>


 			<!-- JS & Favicon -->
			<xpath expr="." position="inside">
				<link rel="shortcut icon" href="/theme_fluxdocs/static/favicon/favicon_v02.png" type="image/x-icon" />
