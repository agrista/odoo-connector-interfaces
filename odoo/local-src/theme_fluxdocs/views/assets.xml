				<script type="text/javascript" src="/theme_fluxdocs/static/lib/bootstrap-imgupload/js/bootstrap-imgupload.js"></script>
				<script type="text/javascript" src="/theme_fluxdocs/static/js/image_upload.js"></script>

				<!--  still needed ? -->
				<script type="text/javascript" src="/theme_fluxdocs/static/js/plugins/imagesloaded.pkgd.js"></script>
				<script type="text/javascript" src="/theme_fluxdocs/static/js/mosaic.js"></script>
				<script type="text/javascript" src="/theme_fluxdocs/static/js/tooltips.js"></script>
				<script type="text/javascript" src="/theme_fluxdocs/static/js/fluxdock.js"></script>
			</xpath>


		</template>

	</data>
