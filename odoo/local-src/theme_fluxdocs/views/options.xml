<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

		<template id="snippet_content_opt" name="Snippet Content Options" inherit_id="website.snippet_options">
			<xpath expr="//div[@data-js='background']" position="replace">
				<div data-selector=".content"> <!-- Options group -->
					<li class="dropdown-submenu">
						<a href="#">Background</a>
						<ul class="dropdown-menu"> <!-- Options list -->
							
							<li data-select_class="opt_white_bg">
								<a>White</a>
							</li>
							<li data-select_class="opt_dark_bg">
								<a>Dark Violet</a>
							</li>
							<li data-select_class="opt_dark_grid_bg">
								<a>Dark Violet Pattern</a>
							</li>
						</ul>
					</li>
				</div>
			</xpath>
			
			<xpath expr="//div[@data-js='colorpicker']" position="replace">
				<!-- Naught -->
			</xpath>
			
			<xpath expr="//div[@data-js='blog-style']" position="replace">
				<!-- Naught -->
			</xpath>
			
		</template>
		
	</data>
</openerp>