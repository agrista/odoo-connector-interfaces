<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_partner_project_expertise_expertise_filter" model="ir.ui.view">
            <field name="name">partner_project_expertise.expertise.select</field>
            <field name="model">partner.project.expertise</field>
            <field name="arch" type="xml">
                <search string="Expertise">
                    <field name="name" string="Name"/>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_partner_project_expertise_expertise_form" model="ir.ui.view">
            <field name="name">partner_project_expertise.expertise.form</field>
            <field name="model">partner.project.expertise</field>
            <field name="arch" type="xml">
                <form string="expertise">
                    <header>
                    </header>
                    <sheet string="Expertise">
                     <group>
                        <field name="name"/>
                     </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_partner_project_expertise_expertise_tree" model="ir.ui.view">
            <field name="name">partner_project_expertise.expertise.tree</field>
            <field name="model">partner.project.expertise</field>
            <field name="arch" type="xml">
                <tree string="Expertise">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_partner_project_expertise_expertise" model="ir.actions.act_window">
            <field name="name">Partner Project Expertise</field>
            <field name="res_model">partner.project.expertise</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_partner_project_expertise_expertise_tree"/>
            <field name="search_view_id" ref="view_partner_project_expertise_expertise_filter"/>
            <field name="domain">[]</field>
        </record>

        <menuitem
            name="Partner Project Expertise"
            id="menu_expertise"
            sequence="15"
            action="action_partner_project_expertise_expertise"
            parent="project.menu_project_config"
            />

        <record id="action_partner_project_expertise_expertise_partner" model="ir.actions.act_window">
            <field name="name">Partner Project Expertise Sale</field>
            <field name="res_model">partner.project.expertise</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_partner_project_expertise_expertise_tree"/>
            <field name="search_view_id" ref="view_partner_project_expertise_expertise_filter"/>
            <field name="domain">[]</field>
        </record>

        <menuitem
            name="Partner Project Expertise"
            id="menu_expertise_sale"
            sequence="15"
            action="action_partner_project_expertise_expertise_partner"
            parent="base.menu_sale_config"
            />
    </data>
</openerp>
