<?xml version="1.0"?>
<odoo>

  <record model="ir.rule" id="not_published_reference_visible_only_by_owner">
    <field name="name">Unpublished references are only visibile by the owner</field>
    <field name="model_id" ref="model_project_reference"/>
    <field name="perm_read" eval="True"/>
    <field name="perm_create" eval="False"/>
    <field name="perm_write" eval="False"/>
    <field name="perm_unlink" eval="False"/>
    <field name="domain_force">['|', ('website_published', '=', True), '&amp;', ('create_uid','=',user.id), ('website_published', '=', False)]</field>
  </record>

  <record model="ir.rule" id="reference_only_owner_can_update_delete">
    <field name="name">References can be updated and deleted only by owner or admin</field>
    <field name="model_id" ref="model_project_reference"/>
    <field name="perm_write" eval="True"/>
    <field name="perm_create" eval="False"/>
    <field name="perm_read" eval="False"/>
    <field name="perm_unlink" eval="True"/>
    <field name="domain_force">[('create_uid','=',user.id)]</field>
  </record>

</odoo>
