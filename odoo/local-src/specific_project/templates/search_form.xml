<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="search_form" name="Fluxdock project search form"
              inherit_id="cms_form.base_form" primary="True">

      <!-- remove std buttons at bottom -->
      <xpath expr="//div[contains(@class, 'form-controls')]" position="replace" />

    </template>

    <template id="search_form_fields" name="Fluxdock project search form fields">

      <div class="row filter-row row-1">
        <div class="col-md-9 col-xs-12">
          <t t-raw="form_fields['name']['widget'].render()"/>
        </div>
        <div class="col-md-3 col-xs-12">
          <button type="submit" class="btn btn-default btn-primary ">Search</button>
        </div>
      </div>
      <div class="row filter-row row-2">
        <div class="col-md-6 col-xs-12">
          <t t-raw="form_fields['industry_ids']['widget'].render()"/>
        </div>
        <div class="col-md-6 col-xs-12">
          <t t-raw="form_fields['expertise_ids']['widget'].render()"/>
        </div>
      </div>
      <div class="row filter-row row-3">
        <div class="col-md-6 col-xs-12">
          <t t-raw="form_fields['country_id']['widget'].render()"/>
        </div>
        <div class="col-md-6 col-xs-12">
          <t t-raw="form_fields['location']['widget'].render()"/>
        </div>
      </div>
      <t t-if="request.session.uid">
        <div class="row filter-row row-4">
          <t t-set="field" t-value="form_fields['only_my']" />
          <div class="col-md-12 col-xs-12">
            <div class="checkbox">
              <label>
                <t t-raw="field['widget'].render()"/>
                <t t-esc="field['string']" />
              </label>
            </div>
          </div>
        </div>
      </t>

    </template>


    <template id="search_form_wrapper" name="Fluxdock search form wrapper">

        <t t-call="website.layout">
          <t t-set="title" t-value="form.form_title" />
          <div id="wrap" t-att-class="form.form_wrapper_css_klass">
            <section class="content opt_dark_bg">
              <div class="content-wrap">
                <div class="center-block mb16">
                  <t t-raw="0" />
                </div>
                <t t-raw="form.form_render()" />
              </div>
            </section>
            <div class="container">
              <div class="center-block main-content-wrapper" id="ref_content">
                <t t-call="theme_fluxdocs.listing">
                  <t t-set="listing_items" t-value="form.form_search_results['results']" />
                  <t t-set="show_create_date" t-value="1" />
                  <t t-set="item_tags_template" t-value="'theme_fluxdocs.item_tags'" />
                </t>
              </div>
            </div>
            <div class="text-center mb32">
              <t t-call="website.pager">
                <t t-set="pager" t-value="form.form_search_results['pager']" />
              </t>
            </div>
          </div>
        </t>

    </template>

</odoo>
