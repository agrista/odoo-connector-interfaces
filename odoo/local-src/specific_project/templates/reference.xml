<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="reference_detail" name="Reference">
    <t t-call="website.layout">
      <div class="opt_dark_bg" id="wrap">
        <t t-call="theme_fluxdocs.mgmt_actions">
            <t t-set="object" t-value="reference"/>
        </t>
        <div>
          <t t-if="reference.image">
            <div class="top-image jumbotron" t-att-style="'background-image:url({})'.format(website.image_url(reference,'image'))">
            </div>
          </t>
          <div class="container">
            <div class="center-block main-content-wrapper" id="ref_content">
              <h1><t t-esc="reference.name"/></h1>
              <p><t t-esc="reference.website_short_description"/></p>
              <table class="table table-condensed no-border">
                    <tr>
                        <td><strong>Date:</strong></td>
                        <td><t t-esc="reference.implementation_date" /></td>
                    </tr>
                    <tr>
                        <td><strong>Location:</strong></td>
                        <td><t t-esc="reference.location" /></td>
                    </tr>
                    <tr>
                        <td><strong>Website URL:</strong></td>
                        <td><t t-esc="reference.website_url" /></td>
                    </tr>
                    <tr>
                        <td><strong>Industry:</strong></td>
                        <td>
                            <t t-foreach="reference.industry_ids" t-as="one_tag">
                              <t t-esc="one_tag.name + ('' if one_tag_last else ', ')" />
                            </t>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Expertise:</strong></td>
                        <td>
                            <t t-foreach="reference.expertise_ids" t-as="one_tag">
                              <t t-esc="one_tag.name + ('' if one_tag_last else ', ')" />
                            </t>
                        </td>
                    </tr>
              </table>
              <t t-if="reference.linked_partner_ids">
                <table class="table o_my_proposal_table">
                  <thead>
                    <th>Related Members</th>
                  </thead>
                  <t t-foreach="reference.linked_partner_ids" t-as="linked_partner">
                    <tr>
                      <td>
                          <a t-att-href="linked_partner.website_url">
                              <span t-esc="linked_partner.name"/><span class="pull-right fa fa-long-arrow-right"/>
                          </a>
                       </td>
                    </tr>
                  </t>
                </table>
              </t>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>
