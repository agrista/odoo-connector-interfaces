<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="reference_search_form_header" name="Fluxdock reference search form header">
      <div class="content-icon">
        <img src="/fluxdock_project/static/src/img/references_icon_white.png"/>
      </div>
      <h2>Member references</h2>
    </template>

    <template id="search_form_fields" name="Fluxdock project search form fields">

      <div class="row filter-row row-1">
        <div class="col-md-9 col-xs-12">
          <t t-raw="form_fields['name']['widget'].render()"/>
        </div>
        <div class="col-md-3 col-xs-12">
          <button type="submit" class="btn btn-default">Search</button>
        </div>
      </div>
      <div class="row filter-row row-2">
        <div class="col-md-6 col-xs-12">
          <t t-raw="form_fields['industry_ids']['widget'].render()"/>
        </div>
        <div class="col-md-6 col-xs-12">
          <t t-raw="form_fields['expertise_ids']['widget'].render()"/>
        </div>
      </div>
      <div class="row filter-row row-3">
        <div class="col-md-6 col-xs-12">
          <t t-raw="form_fields['country_id']['widget'].render()"/>
        </div>
        <div class="col-md-6 col-xs-12">
          <t t-raw="form_fields['location']['widget'].render()"/>
        </div>
      </div>
      <t t-if="request.session.uid">
        <div class="row filter-row row-4">
          <t t-set="field" t-value="form_fields['only_my']" />
          <div class="col-md-12 col-xs-12">
            <div class="checkbox">
              <label>
                <t t-raw="field['widget'].render()"/>
                <t t-esc="field['string']" />
              </label>
            </div>
          </div>
        </div>
      </t>

    </template>

</odoo>
