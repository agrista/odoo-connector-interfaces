<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- SEARCH VIEW -->
  <record id="view_project_expertise_filter" model="ir.ui.view">
    <field name="name">project_expertise.search</field>
    <field name="model">project.partner.expertise</field>
    <field name="arch" type="xml">
      <search string="Expertise">
        <field name="name" string="Name"/>
      </search>
    </field>
  </record>

  <!-- FORMVIEW -->
  <record id="view_project_expertise_form" model="ir.ui.view">
    <field name="name">project_expertise.expertise.form</field>
    <field name="model">project.partner.expertise</field>
    <field name="arch" type="xml">
      <form string="expertise">
        <header></header>
        <sheet string="Expertise">
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- TREEVIEW -->
  <record id="view_project_expertise_tree" model="ir.ui.view">
    <field name="name">project_expertise.expertise.tree</field>
    <field name="model">project.partner.expertise</field>
    <field name="arch" type="xml">
      <tree string="Expertise" editable="top">
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="action_project_expertise" model="ir.actions.act_window">
    <field name="name">Partner Project Expertise</field>
    <field name="res_model">project.partner.expertise</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_project_expertise_tree"/>
    <field name="search_view_id" ref="view_project_expertise_filter"/>
    <field name="domain">[]</field>
  </record>

  <menuitem
    name="Partner Project Expertise"
    id="menu_project_expertise"
    sequence="15"
    action="action_project_expertise"
    parent="project.menu_project_config"
    />

</odoo>
