<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_project_expertise_project_expertise_filter" model="ir.ui.view">
            <field name="name">project_expertise.project_expertise.select</field>
            <field name="model">project_expertise.project_expertise</field>
            <field name="arch" type="xml">
                <search string="project_expertise">
                    <field name="name" string="Name"/>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_project_expertise_project_expertise_form" model="ir.ui.view">
            <field name="name">project_expertise.project_expertise.form</field>
            <field name="model">project_expertise.project_expertise</field>
            <field name="arch" type="xml">
                <form string="project_expertise">
                    <header>
                    </header>
                    <sheet string="project_expertise">
                     <group>
                        <field name="name"/>
                     </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREEVIEW -->

        <record id="view_project_expertise_project_expertise_tree" model="ir.ui.view">
            <field name="name">project_expertise.project_expertise.tree</field>
            <field name="model">project_expertise.project_expertise</field>
            <field name="arch" type="xml">
                <tree string="project_expertise">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_project_expertise_project_expertise_project_expertise" model="ir.actions.act_window">
            <field name="name">Project Expertise</field>
            <field name="res_model">project_expertise.project_expertise</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_project_expertise_project_expertise_tree"/>
            <field name="search_view_id" ref="view_project_expertise_project_expertise_filter"/>
            <field name="domain">[]</field>
        </record>

        <menuitem
            name="Project Expertise"
            id="menu_project_expertise"
            sequence="15"
            action="action_project_expertise_project_expertise_project_expertise"
            parent="project.menu_project_config"
            />
    </data>
</openerp>
