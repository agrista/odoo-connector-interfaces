<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

	<record id="view_terms_of_use_tree" model="ir.ui.view">
	    <field name="name">terms.of.use.tree</field>
	    <field name="model">terms.of.use</field>
	    <field name="arch" type="xml">
		<tree string="Terms of use">
		    <field name="name"/>
		    <field name="website_id"/>
		</tree>
	    </field>
	</record>
	
	<record id="view_terms_of_use_form" model="ir.ui.view">
	    <field name="name">terms.of.use.form</field>
	    <field name="model">terms.of.use</field>
	    <field name="arch" type="xml">
		<form string="Terms of use">
			<group colspan="4">
					<field name="website_id"/>
					<field name="name"/>
			</group>
			<notebook colspan="4">
				<page string="Terms of use">
					<field name="terms_of_use" widget="html"/>
				</page>
				<page string="Privacy policy">
					<field name="privacy_policy" widget="html"/>
				</page>
			</notebook>
		</form>
	    </field>
	</record>

	<record id="view_terms_of_use_search" model="ir.ui.view">
	    <field name="name">terms.of.use.search</field>
	    <field name="model">terms.of.use</field>
	    <field name="arch" type="xml">
		<search string="Terms of use">
		    <field name="website_id" select="True"/>
		</search>
	    </field>
	</record>
	
        <record id="action_fluxdock_terms_of_use" model="ir.actions.act_window">
            <field name="name">Terms of use</field>
            <field name="res_model">terms.of.use</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
	    <field name="view_id" ref="view_terms_of_use_tree"/>
	    <field name="search_view_id" ref="view_terms_of_use_search"/>
        </record>
	<menuitem name="Terms of use" 
		id="fluxdock_terms_of_use" 
		sequence="10" 
		action="action_fluxdock_terms_of_use" 
		parent="website.menu_website_configuration"/>

    </data>
</openerp>
