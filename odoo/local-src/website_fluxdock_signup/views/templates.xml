<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <template id="website_fluxdock_signup.presignup" name="Pre Signup Form">

            <t t-call="web.login_layout">
		<div class="clearfix oe_login_buttons">
			<p>
				THROUGH COLLABORATION TO INNOVATION
			</p>
			<p>
				I represent a
				<a t-attf-href="/web/signup" class="btn btn-primary">Firma</a>
				<a t-attf-href="/web/signup" class="btn btn-primary">Privatperson</a>
			</p>
			<p>
				Are you already registered? Log in <a t-attf-href="/web/login">here</a>
		       	</p>
		</div>
            </t>
        </template>

        <template id="website_fluxdock_signup.thanks_for_registration" name="Thanks for registration">

            <t t-call="web.login_layout">
		<div class="clearfix oe_login_buttons">
			<p>
				THANK YOU FOR YOUR REGISTRATION.
			</p>
			<p>
				Please confirm your email address:
			</p>
			<p>
				You can edit your profile in the Fluxdock members area. To login please use the choosen 
			        password and user name.	
		       	</p>
			<p>
				<a t-attf-href="/my/account" class="btn btn-primary">Edit profile</a>
			</p>
		</div>
            </t>
        </template>

	<template id="website_fluxdock_signup.signup" name="Signup country" inherit_id="auth_signup.fields">
		<xpath expr="//div[contains(@class,'field-name')]" position="after">
			<div class="form-group field-country">
				<label for="country" class="control-label">Country</label>
				<input type="search" name="country" t-att-value="country" id="country" class="form-control" autofocus="autofocus" required="required"/>
			</div>
		</xpath>
		<xpath expr="//div[contains(@class,'field-confirm_password')]" position="after">
			<div class="form-group field-agree_to_terms">
				<label for="agree_to_terms" class="control-label">Agree to terms</label>
				<input type="checkbox" name="agree_to_terms" t-att-value="agree_to_terms" id="agree_to_terms" class="window-new" required="required"/>
			</div>
		</xpath>
	</template>

</odoo>
