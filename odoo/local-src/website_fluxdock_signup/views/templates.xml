<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="website_fluxdock_signup.account_confirmation"
		name="Account confirmation">
		<t t-call="web.login_layout">
			<div class="clearfix oe_login_buttons">
				<h2>
					THANK YOU FOR VALIDATING YOUR EMAIL ADDRESS.
				</h2>
				<p>
					You can edit your profile in the Fluxdock members area. To login
					please use the choosen
					password and user name.
				</p>
				<div class="oe_login_buttons">
					<div class="button-wrap">
						<a t-attf-href="/my/home" class="btn btn-primary">Login</a>
					</div>
				</div>
			</div>
		</t>
	</template>

	<template id="website_fluxdock_signup.presignup" name="Pre Signup Form">
		<t t-call="web.login_layout">
			<div class="clearfix oe_login_buttons presignup">
				<h2>
					THROUGH COLLABORATION TO INNOVATION
				</h2>
				<div class="presignup-buttons">
					<label class="presignup-label">
						I represent a
					</label>
					<a t-attf-href="/web/signup" class="btn btn-primary">Company</a>
					<a t-attf-href="/web/privateperson" class="btn btn-primary">Private individual</a>
				</div>
				<p>
					Are you already registered? Log in
					<a t-attf-href="/web/login">here</a>
				</p>
			</div>
		</t>
	</template>

	<template id="website_fluxdock_signup.thanks_for_registration"
		name="Thanks for registration">
		<t t-call="web.login_layout">
			<div class="clearfix oe_login_buttons">
				<h2>
					THANK YOU FOR YOUR REGISTRATION.
				</h2>
				<p>
					Please confirm your email address:
				</p>
				<p>
					You can edit your profile in the Fluxdock members area. To login
					please use the choosen
					password and user name.
				</p>
				<div class="oe_login_buttons">
					<div class="button-wrap">
						<a t-attf-href="/my/account" class="btn btn-primary">Edit profile</a>
					</div>
				</div>
			</div>
		</t>
	</template>

	<template id="website_fluxdock_signup.privateperson" name="Private person">
		<t t-call="web.login_layout">
			<div>
				<section class="content newsletter_subscribe opt_dark_bg">
					<div class="content-wrap">
						<div class="content-icon">
							<img src="/theme_fluxdocs/static/img/content-icons/members-white.png"></img>
						</div>
						<h2>Newsletter</h2>
						<p>Evelendi nimpore sitia quam ex eium Et maximos ut mole sitia
							quam ex eium Et maximos ut mole.</p>
					</div>
					<div class="content-wrap newsletter-form-wrap">
						<!-- Campain Monitor form -->
						<form id="subForm" class="newsletter-form"
							action="http://fluxdock.createsend.com/t/i/s/hlykhj/" method="post">
							<input name="cm-name" placeholder="Name" class="form-control"
								type="text"></input>
							<input type="email" name="cm-hlykhj-hlykhj" placeholder="email@domain.com"
								required="required"></input>
							<button type="submit">Subscribe</button>
						</form>
					</div>
				</section>
			</div>
		</t>
	</template>

	<template id="auth_signup.reset_password" name="Reset password">
		<t t-call="web.login_layout">
		
			<h2>
				Reset Password
			</h2>
			
			<div t-if="message">
				<p class="alert alert-success" t-if="message">
					<t t-esc="message" />
				</p>
				<a href="/web/login" class="btn btn-link pull-right">Back to Login</a>
			</div>
	
			<form class="oe_reset_password_form" role="form" method="post"
				t-if="not message">
				<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
	
				<t t-if="token">
					<t t-call="auth_signup.fields">
						<t t-set="only_passwords" t-value="1" />
					</t>
				</t>
	
				<t t-if="not token">
					<div class="form-group field-login">
						<label for="login" class="control-label">Your Email</label>
						<input type="text" name="login" t-att-value="login" id="login"
							class="form-control" autofocus="autofocus" required="required" />
					</div>
				</t>
	
				<p class="alert alert-danger" t-if="error">
					<t t-esc="error" />
				</p>
				<input type="hidden" name="redirect" t-att-value="redirect" />
				<input type="hidden" name="token" t-att-value="token" />
				<div class="clearfix oe_login_buttons">
					<button type="submit" class="btn btn-primary">Confirm</button>
					<div class="login-notice-wrap">
						<a t-attf-href="/web/login?{{ keep_query() }}">Back to Login</a>
					</div>
				</div>
	
			</form>
	
		</t>
	</template>

	<template id="auth_signup.login" inherit_id="web.login"
		name="Sign up - Reset Password">
		<xpath expr="//button[@type='submit']" position="after">
			<div class="login-notice-wrap">
				<div t-if="signup_enabled">
					Not registered yet? Create a free account
					<a t-attf-href="/web/presignup?{{ keep_query() }}">here</a>
				</div>
				<div t-if="reset_password_enabled">
					Forgot your password? Reset your password
					<a t-attf-href="/web/reset_password?{{ keep_query() }}">here</a>
				</div>
			</div>
		</xpath>
	</template>

	<template id="website_fluxdock_signup.fluxdock_login" name="Fluxdock login"
		inherit_id="web.login">
		<xpath expr="//div[contains(@class,'field-db')]" position="before">
			<h2>
				THROUGH COLLABORATION TO INNOVATION
			</h2>
		</xpath>
	</template>

	<template id="website_fluxdock_signup.signup_buttons" name="Signup country"
		inherit_id="auth_signup.signup">
		<xpath expr="//div[contains(@class,'oe_login_buttons')]"
			position="replace">
			<div class="clearfix oe_login_buttons">
				<div class="button-wrap">
					<button type="submit" class="btn btn-primary">Sign up</button>
				</div>
				<p>
					Are you already registered? Log in
					<a t-attf-href="/web/login?{{ keep_query() }}">here</a>
				</p>
			</div>
		</xpath>
	</template>

	<template id="website_fluxdock_signup.signup" name="Signup country"
		inherit_id="auth_signup.fields">
		<xpath expr="//div[contains(@class,'field-login')]" position="before">

			<h2>
				THROUGH COLLABORATION TO INNOVATION
			</h2>

		</xpath>
		<xpath expr="//div[contains(@class,'field-name')]" position="after">
			<div class="form-group field-country">
				<label for="country" class="control-label">Country</label>
				<div class="styled-select">
					<select name="country_id" class="form-control">
						<option value="">Country...</option>
						<t t-foreach="countries or []" t-as="country">
							<option t-att-value="country.id">
								<t t-esc="country.name" />
							</option>
						</t>
					</select>
				</div>
			</div>
		</xpath>
		<xpath expr="//div[contains(@class,'field-name')]" position="replace">
			<div class="form-group field-company">
				<label for="name" class="control-label">Company Name</label>
				<input type="text" name="name" t-att-value="name" id="name"
					class="form-control" placeholder="e.g. John Doe" required="required"
					t-att-readonly="'readonly' if only_passwords else None"
					t-att-autofocus="'autofocus' if login and not only_passwords else None" />
			</div>
		</xpath>
		<xpath expr="//div[contains(@class,'field-confirm_password')]"
			position="after">
			<!-- modal for agree to terms -->
