<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="layout">
  <t t-call="website.layout">
    <t t-set="additional_title">Proposal Detail</t>
    <div id="wrap" t-attf-class="js_proposal o_website_proposal #{extra_css_klass or ''}">
      <div class="oe_structure"/>

      <div class="container mt8">
        <div class="row">
          <div class="col-sm-7" id="proposal_menu">
            <ol class="breadcrumb mb0">
              <li>
                <a t-attf-href="#{return_link}">
                  <t t-if="filters == 'my'">
                    My proposals
                  </t>
                  <t t-if="filters == 'match'">
                    My account
                  </t>
                  <t t-if="filters not in ['my', 'match']">
                    Proposals
                  </t>
                </a>
              </li>
              <li class="active"><span t-field="proposal.name"></span></li>
            </ol>
          </div>
          <t t-if="proposal.create_uid.id == uid">
            <div class="col-sm-5">
              <t t-call="website.publish_management">
                <t t-set="object" t-value="proposal"/>
                <t t-set="publish_edit" t-value="True"/>
              </t>
            </div>
          </t>
        </div>
      </div>
      <t t-raw="0"/>
      <div class="oe_structure"/>
    </div>
  </t>
</template>

</odoo>
