<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record model="ir.ui.view" id="view_project_expertise_form">
  <field name="name">project.expertise.form</field>
  <field name="model">project.expertise</field>
  <field name="arch" type="xml">
    <form string="Expertise">
      <group>
        <group>
          <field name="name"/>
          <field name="description"/>
        </group>
      </group>
    </form>
  </field>
</record>

<record model="ir.ui.view" id="view_project_expertise_tree">
  <field name="name">project.expertise.tree</field>
  <field name="model">project.expertise</field>
  <field name="arch" type="xml">
    <tree string="Expertise" editable="bottom">
      <field name="name"/>
      <field name="description"/>
    </tree>
  </field>
</record>

<record id="view_project_expertise_search" model="ir.ui.view">
  <field name="name">Expertise Search</field>
  <field name="model">project.expertise</field>
  <field name="arch" type="xml">
    <search string="Search Industries">
      <field name="name" string="Expertise" filter_domain="[('name','ilike',self)]"/>
    </search>
  </field>
</record>

<record id="action_project_expertise" model="ir.actions.act_window">
  <field name="name">Industries</field>
  <field name="res_model">project.expertise</field>
  <field name="view_mode">tree</field>
  <field name="view_id" ref="view_project_expertise_tree"/>
  <field name="search_view_id" ref="view_project_expertise_search"/>
  <field name="help" type="html">
    <p class="oe_view_nocontent_create">
      Click to add an expertise.
    </p>
  </field>
</record>

<menuitem name="Expertises" id="menu_project_expertise" parent="menu_project_proposal_settings" action="action_project_expertise" sequence="2" groups="base.group_no_one"/>

</odoo>
