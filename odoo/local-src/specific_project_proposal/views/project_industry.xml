<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record model="ir.ui.view" id="view_project_industry_form">
  <field name="name">project.industry.form</field>
  <field name="model">project.industry</field>
  <field name="arch" type="xml">
    <form string="Industry">
      <group>
        <group>
          <field name="name"/>
          <field name="description"/>
        </group>
      </group>
    </form>
  </field>
</record>

<record model="ir.ui.view" id="view_project_industry_tree">
  <field name="name">project.industry.tree</field>
  <field name="model">project.industry</field>
  <field name="arch" type="xml">
    <tree string="Industry" editable="bottom">
      <field name="name"/>
      <field name="description"/>
    </tree>
  </field>
</record>

<record id="view_project_industry_search" model="ir.ui.view">
  <field name="name">Industry Search</field>
  <field name="model">project.industry</field>
  <field name="arch" type="xml">
    <search string="Search Industries">
      <field name="name" string="Industry" filter_domain="[('name','ilike',self)]"/>
    </search>
  </field>
</record>

<record id="action_project_industry" model="ir.actions.act_window">
  <field name="name">Industries</field>
  <field name="res_model">project.industry</field>
  <field name="view_mode">tree</field>
  <field name="view_id" ref="view_project_industry_tree"/>
  <field name="search_view_id" ref="view_project_industry_search"/>
  <field name="help" type="html">
    <p class="oe_view_nocontent_create">
      Click to add an industry.
    </p>
  </field>
</record>

<menuitem name="Industries" id="menu_project_industry" parent="menu_project_proposal_settings" action="action_project_industry" sequence="3" groups="base.group_no_one"/>
</odoo>
